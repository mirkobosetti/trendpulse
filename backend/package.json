{
  "name": "trendpulse-backend",
  "version": "1.0.0",
  "description": "Backend API for TrendPulse - Analyze online trends",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "supabase:init": "npx supabase init",
    "supabase:login": "npx supabase login",
    "supabase:link": "npx supabase link --project-ref eynsjarxevdieopcaoir",
    "supabase:types": "npx supabase gen types typescript --project-id eynsjarxevdieopcaoir --schema public > database/types.ts",
    "db:migrate:new": "npx supabase migration new",
    "db:reset": "npx supabase db reset --linked",
    "db:push": "npx supabase db push --linked",
    "db:status": "npx supabase migration list --linked"
  },
  "keywords": ["trends", "api", "express"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "supabase": "^2.53.6",
    "tsx": "^4.0.0"
  }
}
